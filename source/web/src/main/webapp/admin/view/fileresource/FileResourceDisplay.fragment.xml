<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:sm="stickman.adminapp.common">
	<VBox class="sapUiSmallMargin">
		<Panel width="auto">
			<headerToolbar>
				<Toolbar>
					<Title text="{i18n>FileResource.previewFile}" />
				</Toolbar>
			</headerToolbar>
			<FlexBox alignItems="Start" justifyContent="Center">
				<VBox>
					<Image src="/web/fileresource?ID={DocStoreId}" height="300px" width="300px" />
				</VBox>
			</FlexBox>
		</Panel>
		<Panel width="auto">
		<headerToolbar>
				<Toolbar>
					<Title text="{i18n>FileResource.metadata}" />
				</Toolbar>
			</headerToolbar>
			<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1" columnsL="1" columnsM="1" class="editableForm">
				<f:content>
					<Label text="{i18n>FileResource.name}" />
					<Text text="{Name}" />
					<Label text="{i18n>FileResource.description}" />
					<Text text="{Description}" />
					<Label text="{i18n>FileResource.tags}" />
					<Text text="{Tags}" />
					<Label text="{i18n>FileResource.type}" />
					<Text text="{Type}" />					
				</f:content>
			</f:SimpleForm>
		</Panel>
	</VBox>
</core:FragmentDefinition>