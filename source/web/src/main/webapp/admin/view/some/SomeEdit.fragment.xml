<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="someEditForm"
			minWidth="1024"
			maxContainerCols="2"
			editable="true"
			layout="ResponsiveGridLayout"
			title="{i18n>Some} {ID}"
			labelSpanL="4"
			labelSpanM="4"
			emptySpanL="1"
			emptySpanM="1"
			columnsL="1"
			columnsM="1"
			class="editableForm">
			<f:content>
				<Label text="{i18n>Some.name}" />
				<Input value="{Name}" />				
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>